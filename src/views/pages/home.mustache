{{>partials/header}}

    <fieldset>
        <form method="POST" action="/novousuario">
            <input type="text" name="name" placeholder="Digite um nome" /><br/><br/>
            <input type="text" name="age" placeholder="Digite uma idade" /><br/><br/>
            <input type="submit" value="Inserir Usuário"/>
        </form>
    </fieldset>

    <h2>Usuários do banco</h2>
    <ul>
        {{#users}}
            <li>{{name}} - Idade: {{age}}</li>
        {{/users}}
    </ul>
  
    {{#user.showOld}}
    Opa {{user.nome}}, você já tem {{user.idade}} anos?
    {{/user.showOld}}

    <h2>Produtos</h2>
    <ul>
        {{#products}}
            {{>partials/productItem}}
        {{/products}}
    </ul>
    <hr/>

    <h2>Produtos a partir de 12 reais</h2>
    <ul>
        {{#expensives}}
            {{>partials/productItem}}
        {{/expensives}}
    </ul>

    <ul>
        {{#user.frasesDoDia}}
            <li>{{.}}</li>
        {{/user.frasesDoDia}}
        {{^frasesDoDia}}
            Não há frases motivacionais hoje
        {{/frasesDoDia}}
    </ul>

{{>partials/footer}}